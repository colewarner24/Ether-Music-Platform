generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  artistName   String
  profilePhoto String?   // optional
  tracks       Track[]
  createdAt    DateTime @default(now())
}

model Track {
  id        Int      @id @default(autoincrement())
  title     String
  filename  String
  mimetype  String
  size      Int
  artist    String
  imageUrl  String?
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}


